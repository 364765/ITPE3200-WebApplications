@model UpdateRentalViewModel

<h2>Update Your Rental</h2>

<div asp-validation-summary="All" class="text-danger"></div>

<form asp-action="UpdateRental">
    <input type="hidden" asp-for=RentalID/>
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Address"></label>
        <input asp-for="Address" class="form-control" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PricePrNight"></label>
        <input asp-for="PricePrNight" class="form-control" />
        <span asp-validation-for="PricePrNight" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="RentalType"></label>
        <input asp-for="RentalType" class="form-control" />
        <span asp-validation-for="RentalType" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="BedNr"></label>
        <input asp-for="BedNr" class="form-control" />
        <span asp-validation-for="BedNr" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="BathNr"></label>
        <input asp-for="BathNr" class="form-control" />
        <span asp-validation-for="BathNr" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Area"></label>
        <input asp-for="Area" class="form-control" />
        <span asp-validation-for="Area" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ImgUrl"></label>
        <input asp-for="ImgUrl" class="form-control" />
        <span asp-validation-for="ImgUrl" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ImgUrl2"></label>
        <input asp-for="ImgUrl2" class="form-control" />
        <span asp-validation-for="ImgUrl" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ImgUrl3"></label>
        <input asp-for="ImgUrl3" class="form-control" />
        <span asp-validation-for="ImgUrl3" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-controller="Rental" asp-action="Details" asp-route-id="@Model.RentalID" class="btn btn-secondary">Cancel</a> 
</form>

