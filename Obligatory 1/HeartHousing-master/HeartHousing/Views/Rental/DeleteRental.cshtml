@model Rental

<h2>Delete Rental</h2>

<h3>Are you sure you want to delete this rental?</h3>

<div>
    <dl class="row">
        <dt class="col-sm-2">Rental ID</dt>
        <dd class="col-sm-10">@Model.RentalID</dd>

        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Address</dt>
        <dd class="col-sm-10">@Model.Address</dd>

        <dt class="col-sm-2">Price Per Night</dt>
        <dd class="col-sm-10">@Model.PricePrNigth</dd>

        <dt class="col-sm-2">Rental Type</dt>
        <dd class="col-sm-10">@Model.RentalType</dd>

        <dt class="col-sm-2">Number of Beds</dt>
        <dd class="col-sm-10">@Model.BedNr</dd>

        <dt class="col-sm-2">Number of Baths</dt>
        <dd class="col-sm-10">@Model.BathNr</dd>

        <dt class="col-sm-2">Rentas Area</dt>
        <dd class="col-sm-10">@Model.Area</dd>

        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>

        <dt class="col-sm-2">Images</dt>
        <dd class="col-sm-10">@Model.ImgUrl</dd>
        <dd class="col-sm-10">@Model.ImgUrl2</dd>
        <dd class="col-sm-10">@Model.ImgUrl3</dd>
        
    </dl>

    <form asp-action="DeleteRentalConfirmed" asp-route-id="@Model.RentalID" method="post">
        <a href=".../Views/Home/Index.cshtml">
            <button type="submit" class="btn btn-danger">Delete rental</button>
        </a>
        <a asp-controller="Rental" asp-action="Details" asp-route-id="@Model.RentalID" class="btn btn-secondary">Cancel</a>
    </form>
</div>
