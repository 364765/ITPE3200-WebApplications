@model CreateOrderRentalViewModel
@{
    ViewData["Title"] = "Book Rental";
}

<h2>Book Rental</h2>

<div asp-validation-summary="All" class="text-danger"></div>

<form asp-action="CreateOrder">
    <div class="form-group">
        <label asp-for="NightsNr"></label><span class="text-danger">*</span>
        <input asp-for="NightsNr" class="form-control" />
        <span asp-validation-for="NightsNr" class="text-danger"></span>
    </div>
    <input type="hidden" asp-for="RentalID" value="@Model.RentalID" />

    <button type="submit" class="btn btn-primary">Book</button>


    <a asp-controller="Rental"
       asp-action="Details"
       asp-route-id="@Model.RentalID"
       class="btn btn-secondary">Back to rental details</a>
</form>